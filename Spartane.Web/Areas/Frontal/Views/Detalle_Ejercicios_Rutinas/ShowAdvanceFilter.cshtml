            advanceSearch.Detalle_Ejercicios_RutinasNumero_de_serieFrom = $("#txtAdvanceFromNumero_de_serie").val();
            advanceSearch.Detalle_Ejercicios_RutinasNumero_de_serieTo = $("#txtAdvanceToNumero_de_serie").val();
        }
        advanceSearch.EjercicioSearchType = 0;
